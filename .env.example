# Pyllm Environment Variables


# PyLogs configuration
# These settings control the PyLogs integration
PYLLM_LOG_LEVEL=INFO                # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
PYLLM_LOG_DIR=./logs               # Directory to store log files
PYLLM_DB_LOGGING=true              # Enable database logging for advanced querying
PYLLM_DB_PATH=./logs/pyllm.db    # Path to SQLite database for logs
PYLLM_JSON_LOGS=false              # Use JSON format for logs (useful for log processors)

# PyLogs advanced settings
LOGLAMA_STRUCTURED_LOGGING=false      # Use structured logging with structlog
LOGLAMA_MAX_LOG_SIZE=10485760         # Maximum log file size in bytes (10 MB)
LOGLAMA_BACKUP_COUNT=5                # Number of backup log files to keep

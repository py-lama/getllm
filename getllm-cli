#!/usr/bin/env python3

# Wrapper script to run GetLLM with direct prompt support
import sys
import os
import argparse
from getllm.cli import main

if __name__ == "__main__":
    # Check if the first argument is a command or a prompt
    commands = ["code", "list", "install", "installed", "set-default", "default", "update", "test", "interactive"]
    
    # If the first argument is not a command and not an option, treat it as a prompt
    if len(sys.argv) > 1 and not sys.argv[1].startswith('-') and sys.argv[1] not in commands:
        # Insert 'code' command before the prompt
        new_args = sys.argv[:1] + ["code"] + sys.argv[1:]
        sys.argv = new_args
    
    sys.exit(main())
